<h1>Burgers</h1>


<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{name}}

        <form action="/" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Devour It</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>


<form action="/" method="POST">

  <div class="form-group">
    <label for="burger">Burger Name: </label>
    <input type="text" id="burger" name="burger_name">
  </div>


  <button type="submit">Add burger</button>
</form>

<h2>Add a burger</h2>